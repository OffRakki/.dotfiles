[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; focused = Active workspace on focused monitor
label-focused = Ô§Ω  %index%
label-focused-background = ${colors.base00}
label-focused-underline = ${colors.base08}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = Ô§º  %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = "Ô§Ω  %index%"
label-visible-background = ${colors.base00}
label-visible-underline = ${colors.base0F}
label-visible-padding = 2 

; urgent = Workspace with urgency hint set
label-urgent = "Ô§Ω  %index%"
label-urgent-background = ${colors.base0C} 
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

