[module/eth]
type = custom/script
exec = ~/.scripts/eth/eth.sh
#exec-if = pgrep -x ethminer
interval = 30

[module/kdeconnect]  
type = custom/script  
exec = ~/.scripts/kdeconnect/polybar-kdeconnect.sh -d  
tail = true

[module/pacaur]
type = custom/script
exec = ~/.scripts/pacaur/updates-pacman-aur.sh
interval = 600

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 94 
labem-empty = Empty

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "î‰¯ "
format-prefix-foreground = ${colors.base05}
format-prefix-underline = ${colors.base0F}

label-layout = %layout%
label-layout-underline = ${colors.base0F}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.base0F}
label-indicator-underline = ${colors.base0F}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = %{F#684dd5}%mountpoint%%{F-}: %used% / %total% %{F#684dd5}(%percentage_used%%)%{F-}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.base00}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.base02}
label-focused-underline = ${colors.base08}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.base00}
label-visible-underline = ${colors.base0F}
label-visible-padding = 2 

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = #a11b2a 
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
